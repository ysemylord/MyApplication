<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--自定义Dialog主题-->

    <style name="myDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--无Title-->
        <item name="android:windowNoTitle">true</item>

        <!-- <item name="android:windowBackground">@android:color/white</item>--><!--dialog 存放内容的背景-->
        <!--是否悬浮，如果为false,则Dialog 沾满整个屏幕-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowContentOverlay">@null</item>

        <!--背景是否模糊显示作用似乎和windowIsTranslucent相似-->
        <item name="android:backgroundDimEnabled">false</item>

        <!--是否半透明-->
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="myTabRadioStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/tab_tadio_color</item>
        <item name="android:button">@null</item>
    </style>

    <style name="mysortRadioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/lite_blue</item>
    </style>

</resources>
